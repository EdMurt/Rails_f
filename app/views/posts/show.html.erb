<p id="notice"><%= notice %></p>
<%= tinymce %>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= raw(@post.content) %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <%= f.input :commenter %>
  <%= f.input :body, input_html: {class: "tinymce"} %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
